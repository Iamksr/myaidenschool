<p id="notice"><%= notice %></p>

<h1>Mystreams</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Dept</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @mystreams.each do |mystream| %>
      <tr>
        <td><%= mystream.name %></td>
        <td><%= mystream.dept %></td>
        <td><%= link_to 'Show', mystream %></td>
        <td><%= link_to 'Edit', edit_mystream_path(mystream) %></td>
        <td><%= link_to 'Destroy', mystream, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Mystream', new_mystream_path %>
